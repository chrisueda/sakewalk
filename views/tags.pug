extends layout

include mixins/_sakeCard

block content
  .inner
    h2 #{tag || "Tags"}
    ul.tags
      each t in tags
        li.tag
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
            span.tag__text= t._id
            span.tag__count= t.count
    .sakes
      each sake in sakes
        +sakeCard(sake)
